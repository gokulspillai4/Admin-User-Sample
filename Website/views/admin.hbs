<header>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">Hello Admin {{username}}</a>

            <a href="/admin/logout" class="btn btn-outline-danger">Logout</a>
            <title>{{title}}</title>
        </div>
    </nav>
</header>



<section class="mt-5">
    <div class="container">
        <div class="d-flex flex-row-reverse"><a href="/admin/add-user" class="btn btn-success p-2 mb-2">Add User</a></div>

        <table class="table table-hover" id="adminTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{!-- <p class="text-success">{{#if status}} {{status-label}}{{/if}}</p> --}}
                {{#each users}}
                <tr class="align-middle">
                    <th scope="row">{{@index}}</th>
                    <td>{{this.username}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.password}}</td>
                    <td><a href="/admin/edit-user/{{this._id}}" type="button" class="btn btn-primary">Edit</a></td>
                    <td><a onclick="return callConfirm()" href="/admin/remove-user?id={{this._id}}" type="button" class="btn btn-danger">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script>
    function callConfirm(){
            return confirm("User data will be deleted. Do you want to continue?")
    }

    $(document).ready( function () {
    $('#adminTable').DataTable();
} );
</script>