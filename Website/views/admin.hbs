<header>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">Hello Admin {{username}}</a>

            <a href="/admin/logout" class="btn btn-outline-danger">Logout</a>
            <title>{{title}}</title>
        </div>
    </nav>
</header>



<section class="mt-5">
    <div class="container">
        <div class="d-flex flex-row-reverse"><a href="/admin/add-user" class="btn btn-success p-2">Add User</a></div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr class="align-middle">
                    <th scope="row">1</th>
                    <td>{{this.username}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.password}}</td>
                    <td><a href="/admin/edit-user" type="button" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/remove-user" type="button" class="btn btn-danger">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>